<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".StarActivity">

    <ImageView
        android:id="@+id/logo_imk"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:src="@drawable/logo_imk"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Customer Satisfaction Survey"
        android:textAlignment="center"
        android:textColor="#0F0F0F"
        android:textDirection="locale"
        android:textSize="24sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="The Advice your give will be very helpful to us in developing our product"
        android:textAlignment="center"
        android:textColor="#0C0B0B"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/produk"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="30dp"
        android:src="@drawable/produk"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:text="Product Example"
        android:textAlignment="center"
        android:textColor="#0A0A0A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button4"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:text="start"
            android:textColor="#020202"
            android:textSize="18sp"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout>