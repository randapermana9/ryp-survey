<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@android:dimen/app_icon_size"
        android:src="@drawable/welcome"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:text="Welcome to RYPSurvey"
        android:textAlignment="center"
        android:textColor="#054763"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:text="If you have already published your survey(s) from the Dashboard, pull down to refresh the screen and your survey will appear here"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textDirection="firstStrong"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textStyle="normal"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:text="Ready for Survey"
            android:textAlignment="center"
            android:textColor="#030303"
            android:textSize="18sp"
            android:typeface="sans"/>
    </LinearLayout>

</LinearLayout>