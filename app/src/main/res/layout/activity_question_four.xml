<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".QuestionFourActivity">

    <ImageView
        android:id="@+id/logo_imk"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo_imk"
        android:textAlignment="gravity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Which Product did you buy today?"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Strecth Children Shirt"
            android:textAllCaps="false"
            android:textColor="#161515"
            android:textSize="18sp"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Oxford Children Shirt"
            android:textAlignment="viewStart"
            android:textColor="#0F0F0F"
            android:textSize="18sp"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kid's Jeans"
            android:textColor="#070707"
            android:textSize="18sp"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kid's Short Jeans "
            android:textColor="#0E0E0E"
            android:textColorHighlight="#111111"
            android:textSize="18sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="150dp"
            android:gravity="bottom|center_horizontal"
            android:text="back"
            android:textAlignment="center"
            android:textColor="#0F0F0F"
            android:typeface="serif" />

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="bottom|center_horizontal"
            android:text="next"
            android:textAlignment="center"
            android:textColor="#0F0F0F"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>